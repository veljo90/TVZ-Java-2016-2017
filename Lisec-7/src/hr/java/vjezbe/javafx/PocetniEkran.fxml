<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane minHeight="200.0" minWidth="300.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.java.vjezbe.javafx.PocetniEkranController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Klijenti">
            <items>
              <MenuItem fx:id="dohvatiKlijenteMenuItem" mnemonicParsing="false" onAction="#prikaziKlijente" text="Dohvat" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Zaposlenici">
            <items>
              <MenuItem fx:id="dohvatiZaposlenikeMenuItem" mnemonicParsing="false" onAction="#prikaziZaposlenike" text="Dohvat" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Artikli">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#prikaziArtikle" text="Dohvat" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Alarmi">
              <items>
                <MenuItem fx:id="dohvatiAlarmeMenuItem" mnemonicParsing="false" onAction="#prikaziAlarme" text="Dohvat" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
   	<fx:include source="Alarmi.fxml" />
   </center>
</BorderPane>
